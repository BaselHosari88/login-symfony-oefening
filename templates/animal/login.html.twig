{% extends 'base.html.twig' %}

{% block title %}Hello AnimalController!{% endblock %}



{% block body %}

    {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security')
        }}</div>
    {% endif %}
<div class="container">
    <h1>Inloggen</h1>
    <p>Vul je email en wachwoord in</p>
    <form  action="{{ path('app_login') }}" method="POST">
        <label for="username">Email:</label>
        <input class="form-control"  type="text" id="username" name="_username" value="{{
        last_username
        }}"/>
        <label for="password">Password</label>
        <input class="form-control" type="password" id="password" name="_password"/>

        <input type="hidden" name="_target_path" value="/redirect">
<br>
        <button class=" btn btn-dark text-light " type="submit">submit</button>
    </form>





</div>

{% endblock %}
