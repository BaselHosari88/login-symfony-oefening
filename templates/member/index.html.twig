{% extends 'base.html.twig' %}

{% block title %}Hello MemberController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Welkom {{ app.user.fname }}! </h1>
    <p>dit is member pagina</p>


    <table class="table">

        <thead>
        <tr>

            <th scope="col">Dieren</th>
            <th scope="col">Beschrijven</th>
            <th scope="col">Land naam</th>
        </tr>

        </thead>
        <tbody>
        {% for dier in dieren  %}
        <tr>

            <td>{{ dier.name }}</td>
            <td>{{ dier.description }}</td>
{#            <td>{{ dier.user.id }}</td>#}
        </tr>
       {% endfor %}
        </tbody>
    </table>





<p></p>
</div>
{% endblock %}
